#include <iostream>
#include <math.h>
using namespace std;


int main()
{
    setlocale(LC_ALL, "ru");

    int key;
    
    
    cout << "Приветствую! Давайте решим, что Вам нужно?" << endl;
    cout << "Вычислить значения сопротивления? Введите - 1." << endl;
    cout << "Найти площадь круга по заданной длине окружности? Введите - 2." << endl;
    cout << "Вычислить пройденное расстояние при прямолинейном равноускоренном движении? Введите - 3." << endl;
    cout << "Завершить программу. Введите - 0." << endl;
    cin >> key;

    switch (key)
    {
    
    case 1:
        {
        float r1, r2, r3;
        cout << "Вычисляем значения сопротивления." << endl;
        cout << "Введите R1: ";
        cin >> r1;
        cout << "Теперь введите R2: ";
        cin >> r2;
        cout << "Осталось ввести R3: ";
        cin >> r3;
         float r0 = 1 / r1 + 1 / r2 + 1 / r3;
        cout << "Значения соправления R0 = " << r0 << endl;
        break;
    }
    case 2:
        {
        const float pi = 3.14;
        float s, l, r;
        cout << "Находим площадь круга по заданной длине окружности." << endl;
        cout << "Для начала, нам нужно вычислить радиус из формулы длинны окружности." << endl;
        cout << "Введите L: " << endl;
        cin >> l;
        r = l / (2 * pi);
        s = pi * pow(r, 2);
        cout << "Площадь круга равна S = " << s;
        break; 
    }
    
    case 3:
        {
        float a, v, t;
        cout << "Вычисляем пройденное расстояние при прямолинейном равноускоренном движении." << endl;
        cout << "Введите скорость V: ";
        cin >> v;
        cout << "Теперь введите время t: ";
        cin >> t;
        cout << "Осталось ввести ускроение a: ";
        cin >> a;
        float S = v * t + (a * pow(t, 2)) / 2;
        cout << " Пройденное расстояние S при прямолинейном равноускоренном движении равно: " << S;
        break;
    }
    default:
        cout << "Жаль, что не смогли Вам помочь :( Хорошего дня!";
        break;
    }
}
